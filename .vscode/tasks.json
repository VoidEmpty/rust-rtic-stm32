{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "embed",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "rust: cargo embed",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"revealProblems": "never"
			}
		},
		{
			"type": "cargo",
			"command": "embed",
			"dependsOn": "rust: erase chip",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "rust: cargo embed with erase",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"revealProblems": "never"
			}
		},
		{
			"type": "shell",
			"command": "probe-rs erase --chip STM32F407VGTx --allow-erase-all --connect-under-reset",
			"label": "rust: erase chip",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"close": true,
				"showReuseMessage": false,
				"revealProblems": "never"
			},
			"problemMatcher": []
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: cargo test"
		}
	]
}