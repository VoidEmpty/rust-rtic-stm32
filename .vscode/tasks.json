{
	"version": "2.0.0",
	"inputs": [
		{
			"description": "Log level",
			"id": "logLevel",
			"type": "pickString",
			"options": [
				// "Trace",
				"Debug",
				"Info",
				"Warn",
				"Error"
			],
			"default": "Info",
		}
	],
	"tasks": [
		{
			"type": "cargo",
			"command": "embed",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo embed",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"revealProblems": "never"
			},
			"options": {
				"env": {
					"DEFMT_LOG": "${input:logLevel}"
				}
			}
		},
		{
			"type": "cargo",
			"command": "embed",
			"dependsOn": "rust: erase chip",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"label": "rust: cargo embed with erase",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"revealProblems": "never"
			}
		},
		{
			"type": "shell",
			"command": "probe-rs erase --chip STM32F407VGTx --allow-erase-all --connect-under-reset",
			"label": "rust: erase chip",
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"close": true,
				"showReuseMessage": false,
				"revealProblems": "never"
			},
			"problemMatcher": [],
			"options": {
				"env": {
					"DEFMT_LOG": "${input:logLevel}"
				}
			}
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: cargo test",
			"options": {
				"env": {
					"DEFMT_LOG": "Debug"
				}
			}
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: debug build",
			"options": {
				"env": {
					"DEFMT_LOG": "Debug"
				}
			},
			"presentation": {
				"echo": true,
				"focus": false,
				"clear": true,
				"reveal": "silent",
				"panel": "dedicated",
				"showReuseMessage": false,
				"revealProblems": "never"
			},
		}
	]
}